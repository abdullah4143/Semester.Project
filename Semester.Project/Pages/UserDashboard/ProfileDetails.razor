@inject UserService UserService
<div class="container mt-5">

    <div class="row">

        <div class="col-md-4">
            <!-- Profile Card -->
            <div class="card">`
                <div class="card-body text-center">
                    <img src="/user.jpg" class="rounded-circle img-fluid mb-3" alt="Profile Image" width="150" height="150">
                    <h4>@_user.Name</h4>
                    <p class="text-muted">@_user.Email</p>
                    <p class="text-muted">@_user.username</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- User Details -->
            <div class="card">
                <div class="card-header">
                    <h5>Profile Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Name</strong></div>
                        <div class="col-sm-9"><p>@_user.Name</p></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Email</strong></div>
                        <div class="col-sm-9">@_user.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Username</strong></div>
                        <div class="col-sm-9">@_user.username</div>
                    </div>
                    
                </div>
            </div>
        </div>


    </div>

</div>


@code {
    [Parameter]
    public User ?_user { get; set; }
}
